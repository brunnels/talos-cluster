---
# yaml-language-server: $schema=https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/v1.32.1-standalone-strict/secret-v1.json
apiVersion: v1
kind: Secret
metadata:
  name: cloudflared-secret
stringData:
  TUNNEL_ID: "#{ cloudflare_tunnel('TunnelID') }#"
  credentials.json: |
    {
      "AccountTag": "#{ cloudflare_tunnel('AccountTag') }#",
      "TunnelSecret": "#{ cloudflare_tunnel('TunnelSecret') }#",
      "TunnelID": "#{ cloudflare_tunnel('TunnelID') }#"
    }
